<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFCE6"
    tools:context=".Congratulations">

    <TextView
        android:id="@+id/wonText"
        android:layout_width="411dp"
        android:layout_height="137dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/volkhov"
        android:gravity="center"
        android:text="You won!"
        android:textColor="#F47421"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/helpText"
        android:layout_width="408dp"
        android:layout_height="65dp"
        android:layout_marginTop="332dp"
        android:fontFamily="@font/volkhov"
        android:gravity="center"
        android:text=""
        android:textColor="#F47421"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="235dp"
        android:layout_height="80dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="212dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/shrikhand"
        android:text="PLAY AGAIN"
        android:textColor="#52C3BE"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wonText" />
</androidx.constraintlayout.widget.ConstraintLayout>